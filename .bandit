# Bandit Security Scanner Configuration

[bandit]
# Directories to exclude from scanning
exclude_dirs:
    - /tests
    - /migrations
    - /node_modules
    - /.venv
    - /venv
    - /templates
    - /static

# Tests to skip (reduce false positives)
skips:
    - B101  # assert_used - OK in tests
    - B601  # paramiko_calls - Not using paramiko
    - B602  # subprocess_popen_with_shell_equals_true - OK with sanitized input
    - B603  # subprocess_without_shell_equals_true - OK
    - B607  # start_process_with_partial_path - OK

# Severity level
severity: medium

# Confidence level
confidence: medium
