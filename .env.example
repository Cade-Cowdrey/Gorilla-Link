# ============================================================
#  PITTSTATE-CONNECT â€” Environment Configuration Example
#  Copy this file to `.env` and fill in your real values.
# ============================================================

# ------------------------
#  Core Environment
# ------------------------
FLASK_ENV=production
RENDER=true
SECRET_KEY=replace_with_secure_random_key
APP_NAME=PittState-Connect

# ------------------------
#  Database (PostgreSQL)
# ------------------------
# Example for local: postgresql://user:password@localhost:5432/pittstate_connect
# Render auto-sets DATABASE_URL for you
DATABASE_URL=

# ------------------------
#  Redis (Sessions + Caching)
# ------------------------
REDIS_URL=redis://default:password@redis-host:6379/0

# ------------------------
#  Mail / SendGrid Settings
# ------------------------
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=apikey
MAIL_PASSWORD=replace_with_sendgrid_api_key
MAIL_DEFAULT_SENDER=noreply@pittstateconnect.com

# ------------------------
#  AWS / Cloud Storage (Optional)
# ------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=pittstate-connect-bucket

# ------------------------
#  OpenAI Integration
# ------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ------------------------
#  Sentry (Error Monitoring, Optional)
# ------------------------
SENTRY_DSN=

# ------------------------
#  Scheduler / Analytics
# ------------------------
SCHEDULER_API_ENABLED=True
ANALYTICS_CACHE_TTL=900
ANALYTICS_SNAPSHOT_INTERVAL_HOURS=6

# ------------------------
#  Logging
# ------------------------
LOG_LEVEL=INFO
LOG_FILE=/var/log/pittstate-connect.log

# ------------------------
#  Security & HTTPS
# ------------------------
TALISMAN_FORCE_HTTPS=True
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
SECURE_COOKIES=True

# ------------------------
#  Feature Flags (Optional Enhancements)
# ------------------------
ENABLE_SMART_MATCH=True
ENABLE_AI_SUMMARIES=True
ENABLE_DONOR_PORTAL=True
ENABLE_EMPLOYER_SPONSORSHIPS=True
ENABLE_PUSH_NOTIFICATIONS=True
ENABLE_MONETIZATION=True
ENABLE_ANALYTICS_SNAPSHOTS=True
ENABLE_AI_RECOMMENDATIONS=True

# ------------------------
#  Developer Info (Optional)
# ------------------------
ADMIN_EMAIL=admin@pittstateconnect.com
SUPPORT_EMAIL=support@pittstateconnect.com
