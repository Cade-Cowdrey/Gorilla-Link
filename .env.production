# =============================================================
# FILE: .env.production
# PittState-Connect — Production Environment Variables
# Advanced + Optional Enhancements
# =============================================================

# --- Flask / App ---
FLASK_ENV=production
APP_NAME="PittState-Connect"
UNIVERSITY_NAME="Pittsburg State University"

# Generate a strong random value (keep secret!)
SECRET_KEY="replace-with-64-char-random-hex"

# Optional: if you use Flask-Security / token signing
SECURITY_PASSWORD_SALT="replace-with-64-char-random-hex"

# --- Logging ---
# info | warning | error | debug  (debug not recommended in prod)
LOG_LEVEL=info

# --- Database ---
# For local prod-like testing, you can point to Postgres:
#   postgresql+psycopg2://USER:PASS@HOST:5432/DBNAME
# Or temporarily use SQLite to boot the app without Postgres:
#   sqlite:////absolute/path/to/pittstate.db
SQLALCHEMY_DATABASE_URI="postgresql+psycopg2://pittstate_connect_user:replace-password@localhost:5432/pittstate_connect"

# If you keep the classic DATABASE_URL around for other tools, that’s fine:
# (Your app reads SQLALCHEMY_DATABASE_URI; Render will inject it automatically.)
DATABASE_URL="postgresql://pittstate_connect_user:replace-password@localhost:5432/pittstate_connect"

# --- Mail / Email ---
MAIL_SERVER="smtp.gmail.com"
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME="replace-with-real-username@domain.com"
MAIL_PASSWORD="replace-with-app-password-or-real-password"
MAIL_DEFAULT_SENDER="PittState-Connect <no-reply@pittstate.edu>"

# --- OpenAI / AI (optional) ---
# Set this to enable AI features (essay scoring, helpers, etc.)
OPENAI_API_KEY="replace-with-your-openai-api-key"
# Tunables for the AI tasks (safe defaults)
AI_MODEL="gpt-4o-mini"
AI_TEMPERATURE=0.4
AI_MAX_TOKENS=1500

# --- Feature Flags (toggle optional modules on/off) ---
ENABLE_ANALYTICS=true
ENABLE_DONOR_PORTAL=true
ENABLE_SCHOLARSHIP_AI=true
ENABLE_MENTOR_FEATURES=true
ENABLE_DIAGNOSTICS=true
ENABLE_DONOR_SYNC=true

# --- Sentry (optional error monitoring) ---
SENTRY_DSN=""  # set DSN to enable Sentry; leave empty to disable

# --- Gunicorn (tunable concurrency) ---
# These are read by your Procfile/render.yaml via ${VAR:-default}
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_WORKER_CLASS="gthread"

# --- CORS (if you need to expose API to specific origins) ---
# Example: https://pittstate.edu,https://pittstate-connect.onrender.com
CORS_ALLOWED_ORIGINS="*"

# --- Storage / Paths (optional; used by reports/exports if you add them) ---
DATA_DIR="/data"
EXPORTS_DIR="/data/exports"
REPORTS_DIR="/data/reports"

# --- Security Headers / CSP knobs (leave default unless you know you need it) ---
# If you externalize inline scripts/styles later, you can tighten CSP in app_pro.py
CSP_EXTRA_IMG_SRC=""
CSP_EXTRA_SCRIPT_SRC=""
CSP_EXTRA_STYLE_SRC=""
