# ============================================================
# PittState-Connect â€” Production Environment (.env.production)
# Advanced config with feature flags + safe defaults
# NOTE: Keep secrets blank here and set them in Render Dashboard.
# ============================================================

# --------------------------
# CORE FLASK / APP IDENT
# --------------------------
FLASK_ENV=production
APP_NAME=PittState-Connect
UNIVERSITY_NAME=Pittsburg State University

# SECRET KEY
# Render's render.yaml generates one automatically (SECRET_KEY.generateValue: true).
# Only set this if you REMOVE generateValue in render.yaml.
# SECRET_KEY=__SET_IN_RENDER_DASHBOARD__

# --------------------------
# DATABASE (Postgres on Render)
# --------------------------
# Example: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=__SET_IN_RENDER_DASHBOARD__

# --------------------------
# MAIL / SENDGRID OR GMAIL SMTP
# Keep creds in dashboard; sender domain should be verified on provider.
# --------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=__SET_IN_RENDER_DASHBOARD__
MAIL_PASSWORD=__SET_IN_RENDER_DASHBOARD__
MAIL_DEFAULT_SENDER=no-reply@pittstateconnect.edu

# --------------------------
# AI / OPENAI (optional)
# --------------------------
OPENAI_API_KEY=__SET_IN_RENDER_DASHBOARD__
AI_HELPER_ENABLED=True
AI_SMART_MATCH_ENABLED=True
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=1500
AI_TEMPERATURE=0.4
AI_LOGGING_ENABLED=True
AI_ANALYTICS_MODE=True

# --------------------------
# FEATURE FLAGS (turn modules on/off without code changes)
# --------------------------
CAREERS_BOARD_ENABLED=True
SCHOLARSHIP_HUB_ENABLED=True
MENTORSHIP_PROGRAM_ENABLED=True
DONOR_PORTAL_ENABLED=True
NOTIFICATIONS_ENABLED=True
DEPARTMENT_PAGES_ENABLED=True
ANALYTICS_DASHBOARD=True
ALUMNI_PORTAL_ENABLED=True
EVENTS_ENABLED=True
MESSAGING_ENABLED=True

# --------------------------
# ANALYTICS / MONITORING
# --------------------------
ENABLE_ANALYTICS=True
ENABLE_REQUEST_LOGGING=True
SENTRY_DSN=__SET_IN_RENDER_DASHBOARD__   # optional

# --------------------------
# SECURITY / COOKIES / SCHEME
# --------------------------
LOG_LEVEL=info
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PREFERRED_URL_SCHEME=https

# --------------------------
# BRANDING / THEME
# --------------------------
THEME_COLOR_PRIMARY=#A6192E
THEME_COLOR_SECONDARY=#FFB81C
THEME_COLOR_ACCENT=#F2F2F2
LOGO_URL=/static/images/psu-logo.svg
TAGLINE=Connecting Students, Alumni, and Employers

# --------------------------
# STATIC / UPLOADS (Render persistent disk)
# --------------------------
UPLOAD_FOLDER=/opt/render/project/persistent/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,docx,zip

# --------------------------
# GAMIFICATION / ENGAGEMENT (optional)
# --------------------------
LEADERBOARD_ENABLED=True
BADGES_ENABLED=True
USER_ANALYTICS_ENABLED=True
USER_ENGAGEMENT_TRACKING=True
INSIGHTS_DASHBOARD=True
INSIGHTS_TIMELINE=True

# --------------------------
# FINANCIAL / SCHOLARSHIP EXTRAS
# --------------------------
FINANCIAL_LITERACY_HUB=True
COST_TO_COMPLETION_DASHBOARD=True
FUNDING_JOURNEY_TIMELINE=True
SCHOLARSHIP_ANALYTICS_ENABLED=True
SCHOLARSHIP_PROGRESS_METER=True
SCHOLARSHIP_AUTO_REMINDERS=True
SCHOLARSHIP_DEADLINE_TRACKER=True
SCHOLARSHIP_ESSAY_LIBRARY=True
SCHOLARSHIP_FACULTY_RECOMMENDATIONS=True
SCHOLARSHIP_PEER_MENTOR_SYSTEM=True
SCHOLARSHIP_IMPACT_STORIES_FEED=True

# --------------------------
# RENDER / RUNTIME
# --------------------------
# PORT is injected by Render; do not set here.
# PYTHON_VERSION is set in render.yaml; no need to duplicate here.
