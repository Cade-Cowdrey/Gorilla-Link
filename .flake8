[flake8]
# Flake8 Configuration

# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    migrations,
    node_modules,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    templates,
    static

# Ignore specific error codes
ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by max-line-length)
    W503,  # Line break before binary operator
    W504,  # Line break after binary operator
    E402,  # Module level import not at top of file
    F401,  # Imported but unused (handled by IDE)

# Complexity
max-complexity = 15

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    config.py:E501
    test_*.py:F401,F811
